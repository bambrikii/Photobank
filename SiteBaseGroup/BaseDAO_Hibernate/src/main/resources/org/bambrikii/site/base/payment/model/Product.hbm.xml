<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.bambrikii.site.base.payment.model.Product"
		table="site_product">
		<id column="id" name="id" type="integer">
			<generator class="identity" />
		</id>
		<property column="name" name="name" type="string" />
		<property column="active" name="active" type="boolean" />
		<bag name="prices" cascade="all,delete-orphan" lazy="false">
			<key column="product_id" foreign-key="id" not-null="true" update="false" />
			<one-to-many class="org.bambrikii.site.base.payment.model.Price" />
		</bag>
	</class>
</hibernate-mapping>
